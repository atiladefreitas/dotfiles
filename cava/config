## Configuration file for CAVA. Tokyo Night Storm.

[general]

framerate = 144

# Autosens adjusts sensitivity dynamically
autosens = 1

# Bar count: 0 = auto-fill
bars = 0
bar_width = 1
bar_spacing = 1

# Frequency range
lower_cutoff_freq = 50
higher_cutoff_freq = 10000

# Sleep after silence
sleep_timer = 0


[input]

method = pulse
source = auto


[output]

method = noncurses
orientation = bottom

# Stereo mirrors channels with lows in center
channels = stereo
mono_option = average

# Idle flat bar heads
show_idle_bar_heads = 1


[color]

# background = '#24283b'
foreground = '#c0caf5'

# Tokyo Night Storm gradient - deep indigo blues rising to bright cyan
gradient = 1
gradient_color_1 = '#3d59a1'
gradient_color_2 = '#7aa2f7'
gradient_color_3 = '#2ac3de'
gradient_color_4 = '#7dcfff'
gradient_color_5 = '#89ddff'
gradient_color_6 = '#b4f9f8'
gradient_color_7 = '#73daca'
gradient_color_8 = '#c0caf5'


[smoothing]

# Monstercat-style smoothing for fluid motion
monstercat = 1
waves = 0

# Noise reduction: lower = snappier, higher = smoother
noise_reduction = 40


[eq]

1 = 1.2 # bass boost
2 = 1.1
3 = 1
4 = 1
5 = 0.9 # slight treble tame
